executable backend
  main-is:             Main.hs
  other-modules:       Prelude
                     , Ledger.Orphans
                     , Jupyter
                     , Jupyter.Types
                     , Jupyter.Types.Common
                     , Jupyter.Types.Kernel
                     , Jupyter.Types.Message
                     , Jupyter.Types.Content
  -- other-extensions:
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N4
  build-depends:       base-noprelude >=4.13 && <4.14
                     , monad-control
                     , adjunctions
                     , common
                     , aeson
                     , aeson-pretty
                     , casing
                     , containers
                     , directory
                     , distributive
                     , filepath
                     , lens
                     , lifted-async
                     , lifted-base
                     -- , lucid
                     , network
                     , regex-tdfa
                     -- , reflex-dom
                     , relude
                     , scotty
                     , singletons
                     , some
                     , temporary
                     , text
                     , time
                     , typed-process
                     , unix
                     , uuid
                     , unordered-containers
                     , wai-cors
                     , wai-middleware-static
                     , zeromq4-haskell
  hs-source-dirs:      src
  default-language:    Haskell2010
  default-extensions:  DataKinds
                     , FlexibleContexts
                     , FlexibleInstances
                     , FunctionalDependencies
                     , GADTs
                     , InstanceSigs
                     , MultiWayIf
                     , PolyKinds
                     , RankNTypes
                     , ScopedTypeVariables
                     , StandaloneDeriving
                     , TypeFamilies
                     , TypeFamilyDependencies
                     , TypeOperators

build-type:          Simple
extra-source-files:  CHANGELOG.md

library
  exposed-modules:     Ledger
                     , Ledger.Events
                     , Ledger.JS
                     , Ledger.Prelude
                     , Ledger.Types
                     , Ledger.Widgets
                     , Ledger.Utility
  build-depends:       base >=4.12 && <4.13
                     , common
                     , aeson
                     , attoparsec
                     , containers
                     , jsaddle
                     , jsaddle-warp
                     , lens
                     , random
                     , relude
                     , reflex-dom
                     , regex-tdfa
                     , regex-tdfa-text
                     , relude
                     , text
                     , uuid-types
                     , witherable
  if impl(ghcjs -any)
    build-depends:
  else
    build-depends:     warp
                     , wai
                     , wai-middleware-static
                     , websockets
  hs-source-dirs:      src
  default-language:    Haskell2010

executable frontend
  main-is:             Main.hs
  -- other-extensions:
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N4
  build-depends:       base >=4.12 && <4.13
                     , frontend
                     , reflex-dom
  hs-source-dirs:      app
  default-language:    Haskell2010
